<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentCulture" >

    <LinearLayout
        android:id="@+id/galleryMergeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/mapMergeView"
        android:layout_marginLeft="57dp"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp" >

        <ImageView
            android:id="@+id/galleryImageView"
            android:layout_width="528dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="12.40"
            android:adjustViewBounds="true"
            android:contentDescription="@string/gallery"
            android:src="@drawable/shop" />

        <TextView
            android:id="@+id/galleryTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1.07"
            android:paddingLeft="60dp"
            android:text="@string/gallery"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mapMergeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="125dp"
        android:layout_toRightOf="@+id/galleryMergeView"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingLeft="20dp" >

        <ImageView
            android:id="@+id/mapImageView"
            android:layout_width="392dp"
            android:layout_height="0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2.17"
            android:adjustViewBounds="true"
            android:contentDescription="@string/maplocation"
            android:src="@drawable/patty" />

        <TextView
            android:id="@+id/mapTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:paddingLeft="60dp"
            android:text="@string/maplocation"
            android:textAppearance="?android:attr/textAppearanceMedium" />
    </LinearLayout>

</RelativeLayout>